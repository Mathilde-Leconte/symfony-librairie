{% extends 'base-backend.html.twig' %}

{% block title %}BookPage index{% endblock %}

{% block body %}
    <h1>BookPage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book_page in book_pages %}
            <tr>
                <td>{{ book_page.id }}</td>
                <td>{{ book_page.imageName }}</td>
                <td>{{ book_page.updatedAt ? book_page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_book_page_show', {'id': book_page.id}) }}">show</a>
                    <a href="{{ path('app_admin_book_page_edit', {'id': book_page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_book_page_new') }}">Create new</a>
{% endblock %}
